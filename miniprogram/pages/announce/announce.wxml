<view class="whole-page">

  <form>
  <view class='page-section'>
    <view class="item-title">
      <input placeholder='标题' placeholder-class='input-placeholder' value=''></input>
    </view>
  </view>

  <view class='page-section'>
    <view class="detail">
    <textarea class="detailTA" placeholder='请详细描述物品' placeholder-class='input-placeholder' maxlength='-1' value=''></textarea>
    <view class='plus-button'>
      <image id='tianjiaImage' src='/images/announce/tianjia.png' bindtap='useCamera'></image>
    </view>
    </view>
  </view>

  <view class='page-section'>
    <view class="price">
    <label for='price-input'>￥</label>
    <input type="number" placeholder='希望的价格' placeholder-class='input-placeholder' id='price-input' value=''></input>
    <label for='price-input'>￥</label>
    <input type="number" placeholder='买入的价格' placeholder-class='input-placeholder' id='price-input' value=''></input>
    </view>
  </view>

  <view class='page-section'>
    <view class='contact-method'>
      <picker value='{{contactIndex}}' range='{{contactArray}}' bindchange='bindPickerContactChange'>
        <view class='contact-input'>{{contactArray[contactIndex]}} ▼ :</view>
      </picker>
      <input placeholder='请填写{{contactArray[contactIndex]}}' placeholder-class='input-placeholder' value=''></input>
    </view>
  </view>

  <view class='page-section'>
    <view class='position'>
    <view id='position-text'>
      <text>所处校区:</text>
    </view>
    <checkbox-group>
      <label for='xianlin'>仙林</label>
      <checkbox id='xianlin'></checkbox>
     <label for='gulou'>鼓楼</label>
     <checkbox id='gulou'></checkbox>
    </checkbox-group>
    </view>
  </view>
  
  <view class='page-section'>
    <view class='classification'>
      <view class='classification-label'>物品种类:</view>
      <picker value="{{classIndex}}" range="{{classArray}}" bindchange='bindPickerClassChange'>
        <view class='classification-input'>{{classArray[classIndex]}}</view>
      </picker>
    </view>
  </view>

  <view class='page-section2'>
    <view class='finish-bottom'>
      <button class='submitButton'  form-type='submit'>确认发布</button>
    </view>
  </view>

  </form>

</view>