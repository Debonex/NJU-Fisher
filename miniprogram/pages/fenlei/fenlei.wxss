/* miniprogram/pages/fenlei/fenlei.wxss */

.hintMsg{
  margin-top: 4rpx;
  font-size: 20rpx;
  color:#808080;

}




.item_view{
  width:500rpx;
  flex-direction: column-reverse;
  margin-right:30rpx;
  position:relative;
  
}

.money_view{
  flex-direction: row;
  margin-left: 7rpx;
 
  position: absolute;
  bottom: 20rpx;
  
}
.itemTitle{
  margin: 10rpx;
  margin-top: 10rpx;
  font-size: 30rpx;
  display: -webkit-box ;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2; 
  
  
}
.campus_view{
  font-size: 23rpx;
  margin-left: 10rpx;
  
  position:absolute;
  bottom:65rpx;
  color:#808080;
}

.itemNewPrice{
  width:fit-content;
  margin-right: 20rpx;
  font-size: 30rpx;
  color: red;
  display: inline;
}
.itemOldPrice{
  width:fit-content;
  
  text-decoration: line-through;
  font-size: 25rpx;
  display: inline;
}
.itemKind{
  width:fit-content;
  border-radius:15rpx;
  background-color: #90EE90;
  font-size: 23rpx;
  display: inline;
  
  padding:7rpx;
  padding-left:10rpx;
  padding-right:10rpx;
  position:absolute;
  left:420rpx;
}
.itemlist{
  width:100%;
  height:210rpx;
  background-color: white;
  display: flex;
  margin-top: 10rpx;
  border-radius: 15rpx;
}
.item_image{
  height:200rpx;
  width:200rpx;
  margin-top: 5rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-bottom: 5rpx;
  background-color: rgba(105, 102, 102, 0.301);
}

.reachBottom{
  margin-top: 4rpx;
  margin-bottom: 4rpx;
  font-size: 20rpx;
  color:#808080;
}
.nullHint{
  font-size: 30rpx;
  color:#808080;
  margin-top: 400rpx;
}
.nullHintImage{
  max-width: 120rpx;
  max-height: 120rpx;
  margin-left: 315rpx;
  
}
.nullHintMsg{
  margin-left: 285rpx;
  margin-top: 30rpx;
}