#container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  padding-top: 0rpx;
  box-sizing: border-box;
}

#background {
  width: 750rpx;
  height: 283rpx;
}

#bottom {
  width: 750rpx;
  height: 283rpx;
  position: fixed;
  bottom: 0px;
}

#button_login {
  border-radius: 10rpx;
  background-color: #8B008B;
  color: #ffffff;
  margin-top: 150rpx;
}

.userinfo1 {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar1 {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  margin-top: 75rpx;
}

.userinfo-nickname1 {
  color: #aaa;
  margin-bottom: 75rpx;
}

#enter{
  color: #8B008B;
